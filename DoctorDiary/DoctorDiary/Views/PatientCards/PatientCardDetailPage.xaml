<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoctorDiary.Views.PatientCards.PatientCardDetailPage"
             xmlns:viewmodel="clr-namespace:DoctorDiary.ViewModels.PatientCards;assembly=DoctorDiary"
             xmlns:templates="clr-namespace:DoctorDiary.Views.PatientCards.Templates;assembly=DoctorDiary"
             xmlns:fontAwesome="clr-namespace:FontAwesome;assembly=DoctorDiary"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             xmlns:valueObjects="clr-namespace:DoctorDiary.Models.SickLeaves.ValueObjects;assembly=DoctorDiary"
             xmlns:effects="http://xamarin.com/schemas/2020/toolkit"
             Title="{Binding Title}"
             x:DataType="viewmodel:PatientCardDetailViewModel"
             ControlTemplate="{DynamicResource OpenSickLeaveView}"
             Shell.NavBarIsVisible="False"
             BackgroundColor="WhiteSmoke">
    <ContentPage.Triggers>
        <DataTrigger TargetType="ContentPage"
                     Binding="{Binding SickLeaveIsVisible}"
                     Value="false">
            <Setter Property="ControlTemplate" Value="{DynamicResource OpenSickLeaveView}" />
        </DataTrigger>
    </ContentPage.Triggers>
    <ScrollView>
        <StackLayout VerticalOptions="StartAndExpand">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Button Grid.Column="0"
                        Text="{x:Static fontAwesome:FontAwesomeIcons.LongArrowLeft}"
                        FontSize="22"
                        FontFamily="FAS"
                        HorizontalOptions="Start"
                        BackgroundColor="Transparent"
                        TextColor="Gray"
                        Margin="0, 10, 0, 0"
                        Padding="0"
                        Clicked="BackButton_OnClicked"
                        x:Name="BackButton"/>
                <Button Grid.Column="1"
                        FontFamily="HEB"
                        FontSize="15"
                        Text="Записать на прием" 
                        TextColor="Gray"
                        BackgroundColor="Transparent"
                        HorizontalOptions="End"
                        Clicked="VisitButton_OnClicked"/>
            </Grid>
            <StackLayout Margin="15, 0, 15, 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label FontSize="30"
                               FontFamily="HEB"
                               TextColor="{StaticResource Key=TextColor}"
                               Grid.Row="0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Общая" />
                                    <Span Text="{x:Static system:Environment.NewLine}"/>
                                    <Span Text="информация"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                        <Button Grid.Column="1"
                                Padding="0"
                                WidthRequest="30"
                                HeightRequest="20"
                                Text="{x:Static fontAwesome:FontAwesomeIcons.TrashAlt}"
                                FontSize="Medium"
                                FontFamily="FAS"
                                TextColor="Gray"
                                HorizontalOptions="End"
                                BackgroundColor="Transparent"
                                x:Name="TrashButton"
                                Clicked="TrashButton_OnClicked"/>
                        <Button Grid.Column="2"
                                Padding="0"
                                WidthRequest="30"
                                HeightRequest="20"
                                Text="{x:Static fontAwesome:FontAwesomeIcons.Edit}"
                                FontSize="Medium"
                                FontFamily="FAS"
                                TextColor="Gray"
                                HorizontalOptions="End"
                                BackgroundColor="Transparent"
                                x:Name="EditButton"
                                Clicked="EditButton_OnClicked"/>
                        <Button Grid.Column="3"
                                Padding="0"
                                WidthRequest="30"
                                HeightRequest="20"
                                Text="{x:Static fontAwesome:FontAwesomeIcons.Phone}"
                                FontSize="Medium"
                                FontFamily="FAS"
                                TextColor="Gray"
                                HorizontalOptions="End"
                                BackgroundColor="Transparent"
                                Clicked="PhoneButton_OnClicked"/>
                    </Grid>
                    <Frame Grid.Row="2" 
                           CornerRadius="10"
                           HasShadow="True">
                        <StackLayout>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span FontFamily="HM" 
                                              FontSize="Medium"
                                              Text="Фамилия: " />
                                        <Span FontFamily="HSB"
                                              FontSize="Medium"
                                              Text="{Binding LastName}" 
                                              TextColor="{StaticResource Key=TextColor}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span FontFamily="HM" 
                                              FontSize="Medium"
                                              Text="Имя: " />
                                        <Span FontFamily="HSB"
                                              FontSize="Medium"
                                              Text="{Binding FirstName}" 
                                              TextColor="{StaticResource Key=TextColor}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span FontFamily="HM" 
                                              FontSize="Medium"
                                              Text="Отчество: " />
                                        <Span FontFamily="HSB"
                                              FontSize="Medium"
                                              Text="{Binding Patronymic}" TextColor="{StaticResource Key=TextColor}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span FontFamily="HM" 
                                              FontSize="Medium"
                                              Text="Пол: " />
                                        <Span FontFamily="HSB"
                                              FontSize="Medium"
                                              Text="{Binding Gender}" 
                                              TextColor="{StaticResource Key=TextColor}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span FontFamily="HM" 
                                              FontSize="Medium"
                                              Text="Дата рождения: " />
                                        <Span FontFamily="HSB"
                                              FontSize="Medium"
                                              Text="{Binding Birthday, StringFormat='{0:dd.MM.yyyy}'}" 
                                              TextColor="{StaticResource Key=TextColor}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span FontFamily="HM" 
                                              FontSize="Medium"
                                              Text="Полис: " />
                                        <Span FontFamily="HSB"
                                              FontSize="Medium"
                                              Text="{Binding InsurancePolicy, StringFormat='{0}'}" 
                                              TextColor="{StaticResource Key=TextColor}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span FontFamily="HM" 
                                              FontSize="Medium"
                                              Text="СНИЛС: " />
                                        <Span FontFamily="HSB"
                                              FontSize="Medium"
                                              Text="{Binding Snils, StringFormat='{0}'}" 
                                              TextColor="{StaticResource Key=TextColor}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span FontFamily="HM" 
                                              FontSize="Medium"
                                              Text="Участок: " />
                                        <Span FontFamily="HSB"
                                              FontSize="Medium"
                                              Text="{Binding Precinct, StringFormat='{0}'}" 
                                              TextColor="{StaticResource Key=TextColor}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span  FontFamily="HM" 
                                               FontSize="Medium"
                                               Text="Номер телефона: " />
                                        <Span FontFamily="HSB"
                                              FontSize="Medium"
                                              Text="{Binding PhoneNumber}"
                                              TextColor="{StaticResource Key=TextColor}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span FontFamily="HM" 
                                              FontSize="Medium"
                                              Text="Адрес: " />
                                        <Span FontFamily="HSB"
                                              FontSize="Medium"
                                              Text="{Binding Address}" 
                                              TextColor="{StaticResource Key=TextColor}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span FontFamily="HM" 
                                              FontSize="Medium"
                                              Text="Место работы: " />
                                        <Span FontFamily="HSB"
                                              FontSize="Medium"
                                              Text="{Binding PlaceOfWork, StringFormat='{0}'}" 
                                              TextColor="{StaticResource Key=TextColor}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label>
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span FontFamily="HM" 
                                              FontSize="Medium"
                                              Text="Описание: " />
                                        <Span FontFamily="HSB"
                                              FontSize="Medium"
                                              Text="{Binding Description, StringFormat='{0}'}" TextColor="{StaticResource Key=TextColor}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>
                    </Frame>
                </Grid>
            </StackLayout>
            <StackLayout Margin="15, 20, 15, 0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0"
                           FontSize="30"
                           FontFamily="HEB"
                           TextColor="{StaticResource Key=TextColor}"
                           Grid.Row="0">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Больничный" />
                                <Span Text="{x:Static system:Environment.NewLine}" />
                                <Span Text="лист" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Button Grid.Column="1"
                            Padding="0"
                            WidthRequest="30"
                            HeightRequest="20"
                            Text="{x:Static fontAwesome:FontAwesomeIcons.TrashAlt}"
                            FontSize="Medium"
                            FontFamily="FAS"
                            TextColor="Gray"
                            HorizontalOptions="End"
                            BackgroundColor="Transparent"
                            x:Name="SickLeaveTrashButton"
                            Clicked="SickLeaveTrashButton_OnClicked" />
                    <Button Grid.Column="2"
                            Padding="0"
                            WidthRequest="30"
                            HeightRequest="20"
                            Text="{x:Static fontAwesome:FontAwesomeIcons.Edit}"
                            FontSize="Medium"
                            FontFamily="FAS"
                            TextColor="Gray"
                            HorizontalOptions="End"
                            BackgroundColor="Transparent"
                            x:Name="SickLeaveEditButton"
                            Clicked="SickLeaveEditButton_OnClicked" />
                </Grid>
                <Button Text="Открыть больничный"
                        HorizontalOptions="FillAndExpand"
                        Command="{Binding Path=OpenSickLeaveCommand}"
                        IsVisible="{Binding OpenSickLeaveButtonIsEnabled}"
                        Margin="60, 10, 60, 20"/>
                <StackLayout IsVisible="{Binding SickLeaveIsVisible}"
                             HorizontalOptions="StartAndExpand">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <StackLayout Grid.Row="0">
                            <Frame CornerRadius="10"
                                   HasShadow="True"
                                   Margin="0, 10, 0, 10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Label Grid.Row="0">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span FontFamily="HM" 
                                                      FontSize="Medium"
                                                      Text="№ " />
                                                <Span FontFamily="HSB"
                                                      FontSize="Medium"
                                                      Text="{Binding Number, StringFormat='{0}'}" 
                                                      TextColor="{StaticResource Key=TextColor}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Row="1">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span FontFamily="HM"
                                                      FontSize="Medium"
                                                      Text="c " />
                                                <Span FontFamily="HSB"
                                                      FontSize="Medium"
                                                      Text="{Binding FirstStartDate, StringFormat='{0:dd.MM.yyyy}'}"
                                                      TextColor="{StaticResource Key=TextColor}" />
                                                <Span FontFamily="HM"
                                                      FontSize="Medium"
                                                      Text=" по " />
                                                <Span FontFamily="HSB"
                                                      FontSize="Medium"
                                                      Text="{Binding FirstEndDate, StringFormat='{0:dd.MM.yyyy}'}"
                                                      TextColor="{StaticResource Key=TextColor}" />
                                                <Span FontFamily="HM"
                                                      FontSize="Medium"
                                                      Text=" - " />
                                                <Span FontFamily="HSB"
                                                      FontSize="Medium"
                                                      Text="{Binding FirstDays, StringFormat=' {0}'}"
                                                      TextColor="{StaticResource Key=TextColor}" />
                                                <Span FontFamily="HM"
                                                      FontSize="Medium"
                                                      Text=" д." />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Row="2">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span FontFamily="HM"
                                                      FontSize="Medium"
                                                      Text="c " />
                                                <Span FontFamily="HSB"
                                                      FontSize="Medium"
                                                      Text="{Binding SecondStartDate, StringFormat='{0:dd.MM.yyyy}'}"
                                                      TextColor="{StaticResource Key=TextColor}" />
                                                <Span FontFamily="HM"
                                                      FontSize="Medium"
                                                      Text=" по " />
                                                <Span FontFamily="HSB"
                                                      FontSize="Medium"
                                                      Text="{Binding SecondEndDate, StringFormat='{0:dd.MM.yyyy}'}"
                                                      TextColor="{StaticResource Key=TextColor}" />
                                                <Span FontFamily="HM"
                                                      FontSize="Medium"
                                                      Text=" - " />
                                                <Span FontFamily="HSB"
                                                      FontSize="Medium"
                                                      Text="{Binding SecondDays, StringFormat=' {0}'}"
                                                      TextColor="{StaticResource Key=TextColor}" />
                                                <Span FontFamily="HM"
                                                      FontSize="Medium"
                                                      Text=" д." />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Row="3">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span FontFamily="HM"
                                                      FontSize="Medium"
                                                      Text="c " />
                                                <Span FontFamily="HSB"
                                                      FontSize="Medium"
                                                      Text="{Binding ThirdStartDate, StringFormat='{0:dd.MM.yyyy}'}"
                                                      TextColor="{StaticResource Key=TextColor}" />
                                                <Span FontFamily="HM"
                                                      FontSize="Medium"
                                                      Text=" по " />
                                                <Span FontFamily="HSB"
                                                      FontSize="Medium"
                                                      Text="{Binding ThirdEndDate, StringFormat='{0:dd.MM.yyyy}'}"
                                                      TextColor="{StaticResource Key=TextColor}" />
                                                <Span FontFamily="HM"
                                                      FontSize="Medium"
                                                      Text=" - " />
                                                <Span FontFamily="HSB"
                                                      FontSize="Medium"
                                                      Text="{Binding ThirdDays, StringFormat=' {0}'}"
                                                      TextColor="{StaticResource Key=TextColor}" />
                                                <Span FontFamily="HM"
                                                      FontSize="Medium"
                                                      Text=" д." />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Grid.Row="4">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span FontFamily="HM" 
                                                      FontSize="Medium"
                                                      Text="Всего дней: " />
                                                <Span FontFamily="HSB"
                                                      FontSize="Medium"
                                                      Text="{Binding  TotalDaysOnSickLeave, StringFormat='{0}'}"
                                                      TextColor="{StaticResource Key=TextColor}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </Grid>
                            </Frame>
                        </StackLayout>
                        <StackLayout Grid.Row="1"
                                     Orientation="Horizontal"
                                     Margin="10, 0, 0, 20">
                            <Button Text="Закрыть"
                                    Command="{Binding CloseSickLeaveCommand}"
                                    HorizontalOptions="FillAndExpand"/>
                            <Button Text="Продлить"
                                    Command="{Binding ExtendSickLeaveCommand}"
                                    IsVisible="{Binding ExtendSickLeaveButtonIsEnabled}"
                                    HorizontalOptions="FillAndExpand"/>
                            <Button Text="Закрыть с кодом"
                                    Command="{Binding CloseSickLeaveWithCodeCommand}"
                                    IsVisible="{Binding CloseSickLeaveWithCodeIsEnabled}"
                                    HorizontalOptions="FillAndExpand"/>
                        </StackLayout>
                    </Grid>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>